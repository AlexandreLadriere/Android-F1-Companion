<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/main_dark">

    <ScrollView
        android:id="@+id/scroll_view_main_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_inside_scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/activity_main_horizontal_margin">

            <TextView
                android:id="@+id/textview_main_activity_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/main_activity_description"
                android:text="@string/main_activity_description"
                android:textColor="@color/white"
                android:textSize="@dimen/widget_text_size_0"
                android:textStyle="bold"
                android:layout_marginVertical="@dimen/activity_main_element_padding"
                />

            <include layout="@layout/space"/>

            <TextView
                android:id="@+id/textview_widget_medium_calendar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/main_activity_widget_medium_calendar_title"
                android:text="@string/main_activity_widget_medium_calendar_title"
                android:textColor="@color/formula_red"
                android:textSize="@dimen/widget_text_size_0"
                android:textStyle="bold"
                />

            <LinearLayout
                android:id="@+id/layout_widget_medium_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_rectangle_border"
                android:padding="@dimen/widget_padding_2"
                android:layout_marginVertical="@dimen/activity_main_element_padding">

                <include layout="@layout/calendar_medium_widget"/>

            </LinearLayout>

            <include layout="@layout/space"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/main_activity_widget_medium_calendar_title"
                android:text="@string/main_activity_widget_medium_calendar_title"
                android:textColor="@color/formula_red"
                android:textSize="@dimen/widget_text_size_0"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_rectangle_border"
                android:padding="@dimen/widget_padding_2"
                android:layout_marginVertical="@dimen/activity_main_element_padding">

                <include layout="@layout/calendar_medium_widget"/>

            </LinearLayout>

            <include layout="@layout/space"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/main_activity_widget_medium_calendar_title"
                android:text="@string/main_activity_widget_medium_calendar_title"
                android:textColor="@color/formula_red"
                android:textSize="@dimen/widget_text_size_0"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_rectangle_border"
                android:padding="@dimen/widget_padding_2"
                android:layout_marginVertical="@dimen/activity_main_element_padding">

                <include layout="@layout/calendar_medium_widget"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>